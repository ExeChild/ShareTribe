<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <include 
        android:layout_width="match_parent"
	    android:layout_height="45dp"
	    layout="@layout/only_back_title"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingLeft="15dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="新密码："/>
            <EditText 
                android:id="@+id/edit_update_password_newpassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                 android:padding="2dp"
                android:layout_weight="2"
                android:hint="请输入新密码"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="0dp"
                 android:layout_height="match_parent"
                  android:gravity="left|center"
                android:paddingLeft="15dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="确认密码："/>
            <EditText 
                android:id="@+id/edit_update_password_nextpassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                 android:padding="2dp"
                android:layout_weight="2"
                android:hint="请再次输入密码"/>
        </LinearLayout>
                <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            >
             <TextView 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                 android:gravity="left|center"
                android:paddingLeft="15dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:text="验证码："/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <EditText 
                android:id="@+id/edit_update_password_conNumber"    
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
               
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:layout_weight="3"
                android:hint="请输入验证码"/>
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <Button android:id="@+id/btn_update_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:background="@drawable/btn_confirm"
        android:text="确		定"
        />
    
</LinearLayout>
